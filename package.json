{
  "name": "@sumup/performance-observer",
  "version": "1.0.0",
  "description": "Generic PerformanceObserver API wrapper for measuring performance metrics",
  "scripts": {
    "build": "yarn build:ts && yarn build:js",
    "build:ts": "tsc -b",
    "build:js": "rollup -c",
    "lint": "eslint --ext .ts src/",
    "lint:fix": "yarn lint --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist && rimraf lib",
    "prebuild": "yarn clean",
    "prepublishOnly": "yarn build"
  },
  "main": "dist/performance-observer.min.js",
  "module": "lib/performance-observer.js",
  "typings": "lib/performance-observer.d.ts",
  "files": [
    "dist",
    "lib",
    "src",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sumup-oss/performance-observer.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/sumup-oss/performance-observer/issues"
  },
  "homepage": "https://github.com/sumup-oss/performance-observer#readme",
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@rollup/plugin-babel": "^5.0.4",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "@types/jest": "^26.0.4",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.21.0",
    "rollup-plugin-terser": "^6.1.0",
    "ts-jest": "^26.1.1",
    "typescript": "^3.9.6"
  }
}
